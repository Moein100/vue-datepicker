{
  "name": "@mahlaparvaz/vue-datepicker",
  "version": "0.2.13",
  "description": "A comprehensive Vue 3 datepicker with Jalali, Gregorian, Hijri, and Chinese calendar support. Features range selection, time picker, and full customization.",
  "author": "Mahla Zohourparvaz <mahla.zph@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/vue-datepicker.umd.js",
  "module": "./dist/vue-datepicker.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-datepicker.es.js",
      "require": "./dist/vue-datepicker.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "vuejs",
    "datepicker",
    "date-picker",
    "calendar",
    "jalali",
    "jalaali",
    "persian",
    "shamsi",
    "hijri",
    "gregorian",
    "chinese",
    "multi-calendar",
    "range-picker",
    "time-picker",
    "datetime",
    "i18n",
    "internationalization",
    "rtl",
    "customizable",
    "component"
  ],
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "sass": "^1.93.2",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0"
  }
}
